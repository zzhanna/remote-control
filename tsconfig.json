{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "ES6",
    "module": "Node16",
    "moduleResolution": "Node",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "./**/*.js"]
}
